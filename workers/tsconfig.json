{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/workers",
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "rootDir": "..",
    "noEmit": false
  },
  "include": [
    "../workers/**/*.ts",
    "../lib/**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../dist",
    "../.next",
    "../test",
    "../src"
  ]
}
